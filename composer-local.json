{
  "name": "greenpeace/planet4-handbook",
  "description": "Greenpeace P4 Handbook",
  "license": "MIT",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.org"
    }
  ],
  "require": {
    "greenpeace/planet4-child-theme-handbook" : "dev-main",
    "wpackagist-plugin/loco-translate": "2.*",
    "greenpeace/planet4-plugin-sync-lang-files":"1.*",
    "greenpeace/planet4-master-theme" : "dev-fix/handbook-search-issue-6589",
    "greenpeace/planet4-plugin-gutenberg-blocks": "dev-master",
    "wpackagist-plugin/debug-bar": "1.1.2",
    "wpackagist-plugin/debug-bar-elasticpress" : "2.1.0",
    "wpackagist-plugin/elasticpress":"3.6.*"
  },
  "scripts": {
    "install:plugin-ideapush": "wp plugin install --activate https://storage.googleapis.com/planet4-3rdparty-plugins/ideapush-v8.14.zip",
    "site:custom": [
      "@install:plugin-ideapush"
    ]
  }
}
